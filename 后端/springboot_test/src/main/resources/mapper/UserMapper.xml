    <!--        delete from users-->
    <!--        where id in-->
    <!--        <foreach collection="ids" item="id" separator="," open="(" close=")">-->
    <!--            #{id}-->
    <!--        </foreach>-->
    <!--    </delete>-->

    <select id="selectAll" resultMap="resultUserMap">
        select *
        from user
        where  type!='role_admin'
    </select>

    <select id="selectOne" resultMap="resultUserMap">
        select *
        from user
        <where>
            <if test="name!=null and name !=''">
                and name like concat('%',#{name},'%')
            </if>
            <if test="phone!=null and phone !=''">
                and phone like concat('%',#{phone},'%')
            </if>
        </where>
    </select>


    <!--根据手机号查询用户-->
    <select id="getUserByPhone" resultType="cn.lyj.entity.User">
        select *
        from user
        where phone = #{phone}
    </select>

    <!--    根据登录信息查询用户信息-->
    <select id="getUserByLoginInfo" resultType="cn.lyj.entity.User">
        SELECT *
        FROM `user`
        WHERE username = #{username}
          AND `password` = #{password}
    </select>

    <!--    根据id查询用户-->
    <select id="findById" resultType="cn.lyj.entity.User">
        SELECT *
        FROM `user`
        WHERE id = #{id}
    </select>

</mapper>
